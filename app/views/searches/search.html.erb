<h2>検索結果</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
    <tbody>
        <h3><strong>ユーザー一覧</strong><span></span></h3>
        <tr>
          <% @users.each do |user| %>
            <div class="col-3">
            <td>
              <%= link_to user_path(user.id) do %>
                <%= user.name %><br>
                </td>
              </tr>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
     </div>
   </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがrecipeの時) -->
   <div class="col-9">
        <h3><strong>レシピ一覧</strong><span></span></h3>
        <div class="row">
          <% @recipes.each do |recipe| %>
            <div class="col-3">
              <%= link_to recipe_path(recipe.id) do %>
                <%= image_tag recipe.get_image, size: '200x200' %><br>
                <%= recipe.name %><br>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
     </div>
</table>