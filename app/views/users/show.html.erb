<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <h3>マイページ</h3>
    </div>
  </div>
</div>
 
<div class="container mt-5">
  <div class="row mt-2">
    <div class="col-md-8">
      
      
      <section class="py-5 text-center container">
      <h1 class="fw-light"><%= @user.name %></h1>
      <p class="text-small"><%= link_to @user.followings.count, followings_user_path(@user) %> フォロー <%= link_to @user.followers.count, followers_user_path(@user) %> フォロワー</p>
      <% if @user == current_user %>
      <% else %>
        <% if @user.is_followed_by?(current_user) %>
          <%=link_to user_relationships_path(@user), method: :delete do %>
            <button type="button" class="btn btn btn-danger">フォロー解除</button>
          <% end %>
        <% else %>
          <%=link_to user_relationships_path(@user), method: :post do %>
            <button type="button" class="btn btn btn-primary">フォロー</button>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</section>
    
      
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>プロフィール画面</th>
            <td><%= image_tag @user.get_profile_image(100,100) %></td>
          </tr>
          <tr>
            <th>名前</th>
            <td><%= @user.name %></td>
         
          
           
       
          <tr>
            <% if @user.id == current_user.id %>
            <th>Email</th>
            <td><%= @user.email %></td>
          </tr>
          
           <tr>
             <th>プロフィール</th>
             <th><%= @user.profile_id %></th>
            </tr>
            <% end %>
        </thead>
      </table>
    </div>
 

 
      
 
<div class="container mt-5">
   <div class="row">
    <div class="col-md-12">
    <% if @user == current_user %>
      <%= link_to '情報を編集する', edit_user_path, class: "btn btn-sm btn-primary" %>
    <% end %>
   </div>
  </div>

</div>
</div>