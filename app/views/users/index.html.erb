<div class="container pt-4 px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
       
    </div>
    
    <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        
        <table class="table mb-5">
            <tbody>
                <tr>
                    <td>Image</td>
                    <td>Name</td>
                    <td></td>
                </tr>
                <% @users.each do |user| %>
                  <tr>
                    <td><%= image_tag user.get_profile_image(80,80) %></td>
                    <td><%= user.name %></td>
                    <td><%= link_to "Show", user_path(user.id) %></td>
                  </tr>
                  
                  
            <tr>
              <td>
                <%= link_to user_path(user) do %>
                  <%= user.name %>
                <% end %>
              </td>
              <td>
                
                  <% if current_user != user %>
                    <%=link_to user_relationships_path(user), method: :delete do %>
                      <button type="button" class="btn btn btn-danger">フォロー解除</button>
                    <% end %>
                  
                    <%=link_to user_relationships_path(user), method: :post do %>
                      <button type="button" class="btn btn btn-primary">フォロー</button>
                    <% end %>
                  <% end %>
                  <td>フォロー<%= user.followers.count %></td>
                 <td>フォロワー<%= user.followings.count %></td>
                 
              </td>
            </tr>
                <% end %>
                
            
            
                
            </tbody>
        </table>    
    </div>
  </div>
</div>
