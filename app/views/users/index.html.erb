<div class="home-visual">
  <div class="home-visual-content">
    <p class="home-visual-text">
       <h2>おかえりなさい！</h2><br/>
       <%= current_user.name %>さん
    </p>
  </div>
</div>


<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @users.each do |user| %>
        <div class="profile-container w-75 d-flex mx-auto justify-content-around align-items-center border-bottom py-5">
   <%= image_tag @user.get_profile_image(100,100), class:"rounded-circle";  %>
  <h5 class="profile-name display-4"><%= @user.name %></h5>
  <% if @user.id == current_user.id %>
    <div class="mt-auto">
    <p><%= link_to "プロフィール編集", edit_user_path(@user), class:"text-dark" %></p>
    </div>
  <% end %>
</div>
<%= render 'post_images/list', post_images: @profile_images %>
            <div class="card-content">
              <div class="media">
                <div class="media-content">
                  <div class="title"><%=link_to user.name, user_path(user) %></div>
                </div>
              </div>
              <div class="content">
                投稿数：<%= user.recipes.count %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>