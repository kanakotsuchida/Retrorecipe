<div class="container mt-5">
  <div class="row">
    <div class="col-4 mt-2">
      <h1><%= @recipe.name %></h1>
    </div>
  </div>

  <div class="row mb-5">
    <div class="col-md-5">
      <%= link_to recipe_path(@recipe.id) do %>
      <% end %>
    </div>

   
   

    <div class="row">
      <div class="col-xs-7">
      <div class="recipe-ingredient">
        <h3>材料</h3>
          <%= sanitize @recipe.ingredient, tags:%w(strong em p br div ul ol li) %>
      </div>
    </div>
  </div>

    <!--詳細-->
    <div class="col-md-4">
      <div class="recipe-details">
        <div class="recipe-detail-serves">
          <span class="detail">
            <%= @recipe.serve%>人分
          </span>
        </div>

        <div class="recipe-detail-serves">
          <span class="detail">
            <i class="fas fa-clock"></i>
          </span>
          <%= @recipe.cooking_time %>
        </div>

        

       
        <div class="memo mb-4">
          <h4>メモ</h4>
            <%= sanitize @recipe.memo, tags:%w(strong em p br div ul ol li) %>
        </div>

       

      

  <div class="row">
    <div class="col-md-12">
      <div class="method mb-3">
        <h3>作り方</h3>
          <%= sanitize @recipe.method, tags:%w(strong em p br div ul ol li) %>
      </div>
    </div>
  </div>
</div>

<ul class="list-unstyled">
　　<li><%= link_to "編集画面へ", edit_recipe_path, class:"btn btn-lg btn-Primary" %></li>
    <li><%= link_to "レシピ削除", recipe_path(@recipe),method: :delete, class:"fas fa-trash btn btn-lg btn-Danger", "data-confirm" =>"本当に消しますか?" %></li>
     </ul>
    </div>
  </div>


<!--トップに戻るボタン-->
<span id="back">
  <a href="#">
    <i class="fas fa-arrow-circle-up arrow"></i>
  </a>
</span>