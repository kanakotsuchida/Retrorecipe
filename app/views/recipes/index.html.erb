<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        レシピ一覧
      </h1>
    </div>
  </div>
</section>



 <div class="container">
    <div class="row">
      <div class="col-2 mx-auto">
        <table class="table table-bordered mt-4">
          <thead class="table-area">
            <tr>
              <th class="text-center">ジャンル検索</th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= link_to genre.name, recipes_path(genre_id: genre.id) %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
        
      <div class="col-9">
        <h3><strong>レシピ一覧</strong><span></span></h3>
        <div class="row">
          <% @recipes.each do |recipe| %>
            <div class="col-3">
              <%= link_to recipe_path(recipe.id) do %>
                <%= image_tag recipe.get_image, size: '200x200' %><br>
                
                <%= recipe.name %><br>
              <% end %>
            </div>
          <% end %>
        </div>
     </div>
      </div>
    </div>
  </div>