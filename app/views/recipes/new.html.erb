<% if @recipe.errors.any? %>
  <div class="container mt-5">
    <div class="form">
      <div class="error-box p-3">
        <h5 class=text-danger><%= @recipe.errors.count %>件のエラーが発生しました</h5>
        <ul class="ml-4">
          <% @recipe.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>



<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <h3>New Recipe</h3>

      <div class="row">
       <%= form_with model: @recipe, :url => recipes_path, local:true do |f| %>
        <div class="form-group row">
            <%= f.label :name, 'メニュー名' %><br/>
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>

          <div class="form-group mb-4">
            <%= f.label :recipe_image, '完成写真' %><br/>
            <%= f.file_field :recipe_image, accept: "image/*" %>
            
          </div>

          <div class="form-group mb-4">
            <%= f.label :ingredient, '材料' %>
            <%= f.text_area :ingredient, id: :ingredient, class: "text_area" %>
            <trix-editor input="ingredient"></trix-editor>
          </div>

          <div class="form-group mb-4">
            <%= f.label :method, '作り方' %>
            <%= f.text_area :method, id: :method, class: "form-control", id: "recipe-area" %>
            <trix-editor input="method"></trix-editor>
          </div>

          <div class="field mb-4">
            <%= f.label :serve, '人前' %>
            <%= f.select :serve, options_for_select((1..10).to_a)%>
          </div>

          <div class="form-group mb-4">
            <%= f.label :cooking_time, '調理時間' %>
            <%= f.select :cooking_time, Recipe.cooking_times.keys, {prompt: "Select"} %>
          </div>
       

          <div class="form-group mb-4">
            <%= f.label :memo, '一口メモ' %>
            <%= f.text_field :memo, id: :memo, class: "form-control" %>
           
          </div>

          <div class="form-group mb-4">
            <%= f.label :genre_id, 'メニュージャンル' %><br/>
             <%= f.select :genre_id, @genre_list, include_blank: "ジャンル" %>
          </div>
          
          <div class="form-group mb-4">
            <%= f.label :tag_name, 'タグ' %><br/>
            <%= f.text_field :tag_name, class: "form-control", placeholder: "(タグを複数つけるには半角スペースで区切ってください)" %>
          </div>
        </div>

          
        <div class="create-btn">
          <%= f.submit '投稿する', class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!--トップに戻るボタン-->
<span id="back">
  <a href="#">
    <i class="fas fa-arrow-circle-up arrow"></i>
  </a>
</span>
